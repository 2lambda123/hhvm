(rule
 (alias remove_dead_unsafe_casts)
 (deps
  %{exe:../../src/hh_single_type_check.exe}
  %{project_root}/test/verify.py
  %{project_root}/test/review.sh
  (glob_files %{project_root}/test/remove_dead_unsafe_casts/*.php)
  (glob_files %{project_root}/test/remove_dead_unsafe_casts/*.php.exp))
 (action
  (run
   %{project_root}/test/verify.py
   %{project_root}/test/remove_dead_unsafe_casts
   --program
   %{exe:../../src/hh_single_type_check.exe}
   --in-extension
   .php
   --flags
   --remove-dead-unsafe-casts
   --error-format
   raw)))

(alias
 (name runtest)
 (deps
  (alias remove_dead_unsafe_casts)))
